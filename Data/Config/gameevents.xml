<gameevents max_entities="25">

	<!-- Categories must be defined at the top. -->
	<!-- Used to define the order the categories show in the UI and icon -->
	<category name="twitch_actions" display_name="GameEventCategory_TwitchActions" icon="ui_game_symbol_twitch_actions" />
	<category name="twitch_votes" display_name="GameEventCategory_TwitchVotes" icon="ui_game_symbol_twitch_vote" />
	<category name="admin" display_name="inpGrpAdminName" icon="ui_game_symbol_computer" />
	<category name="poi" display_name="GameEventCategory_POI" icon="ui_game_symbol_map_city" />

	<!-- CORE GAME EVENTS -->

		<action_sequence name="game_first_spawn">
			<property name="allow_user_trigger" value="false" />
			<property name="action_type" value="Game" />
			
			<action class="Delay">
				<property name="time" value="4.5" />
			</action>

			<action class="AddJournalTip">
				<property name="tip_name" value="tutorialTipQuest01" />
				<property name="show_window" value="true" />
				<property name="phase" value="1" />
			</action>

			<action class="Delay">
				<property name="time" value="2" />
				<property name="phase" value="2" />
			</action>

			<action class="AddQuest">
				<property name="quest" value="quest_BasicSurvival1" />
				<property name="phase" value="3" />
			</action>


		</action_sequence>

		<action_sequence name="game_on_death">
			<property name="allow_user_trigger" value="false" />
			<property name="action_type" value="Game" />
			
			<!-- <action class="AddXPDeficit" /> -->

			<action class="AddPartyToGroup">
				<property name="phase" value="0" />
				<property name="group_name" value="party" />
				<property name="twitch_negative" value="false" />
			</action>
			
			
			<action class="Kill">
				<property name="target_group" value="party" />
				<property name="phase" value="1" />
			</action>
			
			<action class="ResetPlayerData">
				<property name="reset_levels" value="true" />
				<property name="remove_landclaims" value="true" />
				<property name="remove_bedroll" value="true" />
				<property name="phase" value="1" />
			</action>

			<action class="BeltTooltip">
				<property name="text" value="Player Death Complete" />
				<property name="phase" value="1" />
			</action>

			<action class="AddJournalTip">
				<property name="tip_name" value="tutorialTipQuest01" />
				<property name="show_window" value="true" />
				<property name="phase" value="1" />
			</action>

			<action class="Delay">
				<property name="time" value="2" />
				<property name="phase" value="2" />
			</action>

			<action class="AddQuest">
				<property name="quest" value="quest_BasicSurvival1" />
				<property name="phase" value="3" />
			</action>
						
			<action class="POIReset">
				<property name="phase" value="4" />
			</action>
			
		</action_sequence>

		<action_sequence name="game_on_spawn">
			<property name="allow_user_trigger" value="false" />
			<property name="action_type" value="Game" />

			<!-- <action class="SetEventFlag"> -->
				<!-- <property name="event_flag" value="BigHead" /> -->
				<!-- <property name="enable" value="true" /> -->
			<!-- </action> -->

		</action_sequence>

		<action_sequence name="game_on_respawn">
			<property name="allow_user_trigger" value="false" />
			<property name="action_type" value="Game" />

			<!-- <action class="BeltTooltip"> -->
				<!-- <property name="text" value="Player Respawn Complete" /> -->
				<!-- <property name="phase" value="1" /> -->
			<!-- </action> -->

		</action_sequence>

	<!-- POI Events -->

	<action_sequence name="quest_poi_lights_off">
		<property name="action_type" value="Game" />
		<property name="target_type" value="POI" />
		<property name="category" value="poi" />

		<action class="POISetLightState">
			<property name="enable_lights" value="false" />
			<property name="index_block_name" value="POILight,TraderOnOff" />
		</action>

		<action class="PlaySound">
			<property name="sound" value="quest_restore_power_start" />
			<property name="phase" value="1" />
		</action>

	</action_sequence>

	<action_sequence name="quest_poi_lights_on">
		<property name="action_type" value="Game" />
		<property name="target_type" value="POI" />
		<property name="category" value="poi" />

		<action class="POISetLightState">
			<property name="enable_lights" value="true" />
			<property name="index_block_name" value="POILight,TraderOnOff" />
		</action>

		<action class="PlaySound">
			<property name="sound" value="quest_restore_power_complete" />
			<property name="phase" value="1" />
		</action>

	</action_sequence>

	<action_sequence name="test_POIReset">
		<property name="action_type" value="Game" />
		<property name="category" value="poi" />
		<action class="POIReset">
		</action>

		<action class="PlaySound">
			<property name="sound" value="zombiemalealert" />
			<property name="phase" value="1" />
		</action>
		
	</action_sequence>
	
	<action_sequence name="quest_restorepower_generator">
		<property name="action_type" value="Game" />
		<property name="target_type" value="POI" />
		
		<action class="PlaySound">
			<property name="sound" value="machine_malfunction" />
			<property name="phase" value="1" />
		</action>
		
		<action class="AddEntitiesToGroup">
			<property name="phase" value="0" />
			<property name="entity_tags" value="entity" />
			<property name="group_name" value="zombies" />
			<property name="max_distance" value="10" />
			<property name="y_height" value="5" />
		</action>
		
		<action class="RageZombies">
			<property name="time" value="60" />
			<property name="speed_percent" value="2.0" />
			<property name="target_group" value="zombies" />
		</action>
	</action_sequence>

		<!-- template commands -->
		<!-- spnc_spawn_single
		zombiename
		spawncount
		alertsound -->
		<action_sequence name="spnc_spawn_single">
			<property name="allow_user_trigger" value="false" />
			<property name="category" value="twitch_actions" />

			<action class="SpawnEntity">
				<property name="entity_names" value="zombieArlene" param1="zombiename" />
				<property name="spawn_count" value="1" param1="spawncount" />
			</action>

			<action class="PlaySound">
				<property name="sound" value="twitch_bad_spawn" />
				<property name="phase" value="1" />
			</action>

			<action class="PlaySound">
				<property name="sound" value="zombiemalealert" param1="alertsound" />
				<property name="phase" value="1" />
			</action>

		</action_sequence>
		<!-- spnc_supply_template
		itemname
		itemcount
		alertsound -->
		<action_sequence name="spnc_supply_template">
			<property name="allow_user_trigger" value="false" />
			<property name="category" value="twitch_actions" />
			<action class="AddItems">
				<property name="added_items" value="ammo9mmBulletBall" param1="itemname" />
				<property name="added_item_counts" value="100" param1="itemcount" />
			</action>
					
			<action class="PlaySound">
				<property name="sound" value="twitch_good_spawn" />
				<property name="phase" value="1" />
			</action>
			
			<action class="PlaySound">
				<property name="sound" value="pistol_reload" param1="alertsound" />
				<property name="phase" value="1" />
			</action>
		</action_sequence>
		
		<!-- GS 3 - SP only -->
		<!-- #ammo_9mm (8 rds) -->
		<action_sequence name="spnc_supply_ammo9mmBulletBallRE" template="spnc_supply_template">
			<variable name="itemname" value="ammo9mmBulletBallRE"/>
			<variable name="itemcount" value="8"/>
		</action_sequence>
		<!-- #green_herb -->
		<action_sequence name="spnc_supply_green_herb" template="spnc_supply_template">
			<variable name="itemname" value="Green Herb"/>
		</action_sequence>
		<!-- #red_herb -->
		<action_sequence name="spnc_supply_red_herb" template="spnc_supply_template">
			<variable name="itemname" value="Red Herb"/>
		</action_sequence>
		<!-- #blue_herb -->
		<action_sequence name="spnc_supply_blue_herb" template="spnc_supply_template">
			<variable name="itemname" value="Blue Herb"/>
		</action_sequence>
		
		<!-- GS 3 - PP commands -->
		<!-- #spawn_normal -->
		<action_sequence name="spnc_spawn_normal">
			<variable name="zombiename" value="zombieArlene,zombieMarlene,zombieJoe,zombieSteve,zombieTomClark,zombieBusinessMan,zombieBoe,zombieJanitor,zombieDarlene,zombieYo"/>
		</action_sequence>
		<!-- #crawler -->
		<action_sequence name="spnc_spawn_crawler">
			<variable name="zombiename" value="Boe Crawler,Joe Crawler,Janitor Crawler,Arlene Crawler,Lab Worker Crawler,Darlene Crawler,Marlene Crawler,Yo Crawler,Steve Crawler,Business Man Crawler,Burnt Crawler,Nurse Crawler,Hazmat Crawler,Skateboarder Crawler"/>
		</action_sequence>
		<!-- #pull -->
		<action_sequence name="action_pull">
			<property name="category" value="twitch_actions" />
			
			<requirement class="HasSpawnedEntities">
				<property name="entity_tags" value="entity" />
			</requirement>

			<action class="AddSpawnedEntitiesToGroup">
				<property name="phase" value="0" />
				<property name="group_name" value="pulledEntities" />
				<property name="entity_tags" value="entity" />
			</action>

			<action class="PlaySound">
				<property name="sound" value="twitch_bad_action" />
				<property name="phase" value="1" />
			</action>

			<action class="PullEntities">
				<property name="phase" value="1" />
				<property name="target_group" value="pulledEntities" />
				<property name="pull_sound" value="twitch_pull" />
			</action>
		</action_sequence>		
		
		<!-- GS 8 - SP only -->
		<!-- #ammo_shells (2 rds) -->
		<action_sequence name="spnc_supply_ammoShotgunShellRE" template="spnc_supply_template">
			<variable name="itemname" value="ammoShotgunShellRE"/>
			<variable name="itemcount" value="2"/>
		</action_sequence>
		<!-- #ammo_44 (2 rds) -->
		<action_sequence name="spnc_supply_ammo44MagnumBulletBallRE" template="spnc_supply_template">
			<variable name="itemname" value="ammo44MagnumBulletBallRE"/>
			<variable name="itemcount" value="2"/>
		</action_sequence>
		<!-- #ammo_rocket (frag) -->
		<action_sequence name="spnc_supply_ammoRocketFragRE" template="spnc_supply_template">
			<variable name="itemname" value="ammoRocketFragRE"/>
			<variable name="itemcount" value="1"/>
		</action_sequence>
		<!-- #ammo_grenade (normal) -->
		<action_sequence name="spnc_supply_thrownGrenadeRE" template="spnc_supply_template">
			<variable name="itemname" value="thrownGrenadeRE"/>
			<variable name="itemcount" value="1"/>
		</action_sequence>
		<!-- #ammo_molotov -->
		<action_sequence name="spnc_supply_thrownAmmoMolotovCocktailRE" template="spnc_supply_template">
			<variable name="itemname" value="thrownAmmoMolotovCocktailRE"/>
			<variable name="itemcount" value="1"/>
		</action_sequence>
		
		<!-- GS 8 - PP commands -->
		<!-- #spawn_tough -->
		<action_sequence name="spnc_spawn_tough">
			<variable name="zombiename" value="zombieMoe,zombieUtilityWorker,zombieBiker,zombieLumberjack,zombieFemaleFat,zombieFatHawaiian,zombieSkateboarder"/>
		</action_sequence>
		<!-- #crimson_head -->
		<action_sequence name="spnc_spawn_crimson_head">
			<variable name="zombiename" value="Crimson Head"/>
		</action_sequence>
		<!-- #forest_speyer -->
		<action_sequence name="spnc_spawn_forest_speyer">
			<variable name="zombiename" value="Forest Speyer2"/>
		</action_sequence>
		<!-- #zombie_dog -->
		<action_sequence name="spnc_spawn_animalZombieDog">
			<variable name="zombiename" value="animalZombieDog"/>
		</action_sequence>
		<!-- #snake -->
		<action_sequence name="spnc_spawn_animalSnake">
			<variable name="zombiename" value="animalSnake"/>
		</action_sequence>

		
		
		<!-- GS 15 - SP only -->
		<!-- #firstaidspray -->
		<action_sequence name="spnc_supply_FirstAidSpray" template="spnc_supply_template">
			<variable name="itemname" value="FirstAidSpray"/>
			<variable name="itemcount" value="1"/>
		</action_sequence>
		<!-- #ammo_762 (7 rds) -->
		<action_sequence name="spnc_supply_ammo762mmBulletBallRE" template="spnc_supply_template">
			<variable name="itemname" value="ammo762mmBulletBallRE"/>
			<variable name="itemcount" value="7"/>
		</action_sequence>
				
		<!-- GS 15 - PP commands -->
		<!-- #spider -->
		<action_sequence name="spnc_spawn_zombieSpider">
			<variable name="zombiename" value="zombieSpider"/>
		</action_sequence>
		<!-- #hunter -->
		<action_sequence name="spnc_spawn_Hunter">
			<variable name="zombiename" value="Hunter"/>
		</action_sequence>
		<!-- #crimson_prototype -->
		<action_sequence name="spnc_spawn_Crimson_Head_Prototype2">
			<variable name="zombiename" value="Crimson Head Prototype2"/>
		</action_sequence>
		
</gameevents>